model TriviaQuestion {
  id          String    @id  @default(cuid())
  question    String
  options     Json    // Store the options as JSON
  answer      String
  showName    String  // Added the showName field
}

model TriviaScore {
  id         String    @id @default(cuid())
  showName   String
  score      Int
  timestamp  DateTime  @default(now())
  userId         String    @unique 
}
